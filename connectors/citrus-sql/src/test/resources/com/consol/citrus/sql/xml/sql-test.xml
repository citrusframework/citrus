<test name="SqlTest" author="Christoph" status="FINAL" xmlns="http://citrusframework.org/schema/xml/testcase"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://citrusframework.org/schema/xml/testcase http://citrusframework.org/schema/xml/testcase/citrus-testcase.xsd">
  <description>Sample test in XML</description>
  <actions>
    <sql datasource="dataSource">
      <statements>
        <statement>insert into message values (100, 'Hello from Citrus!')</statement>
        <statement>update message set text='Hello' where id=100</statement>
      </statements>
    </sql>

    <sql datasource="dataSource" ignore-errors="true">
      <transaction manager="mockTransactionManager" timeout="5000" isolation-level="ISOLATION_READ_COMMITTED"/>
      <statements file="classpath:com/consol/citrus/sql/xml/test-statements.sql"/>
    </sql>
  </actions>
</test>
