<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:citrus="http://www.citrusframework.org/schema/config"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
              http://www.citrusframework.org/schema/config http://www.citrusframework.org/schema/config/citrus-config.xsd
              http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

  <bean id="httpClient" class="org.mockito.Mockito" factory-method="mock">
    <constructor-arg value="com.consol.citrus.http.client.HttpClient"/>
    <constructor-arg value="httpClient"/>
  </bean>

  <bean id="dockerClient" class="org.mockito.Mockito" factory-method="mock">
    <constructor-arg value="com.consol.citrus.docker.client.DockerClient"/>
    <constructor-arg value="dockerClient"/>
  </bean>

  <bean id="seleniumBrowser" class="org.mockito.Mockito" factory-method="mock">
    <constructor-arg value="com.consol.citrus.selenium.endpoint.SeleniumBrowser"/>
    <constructor-arg value="seleniumBrowser"/>
  </bean>

  <!-- Text equals message validator -->
  <bean id="textEqualsMessageValidator" class="com.consol.citrus.cucumber.integration.TextEqualsMessageValidator"/>

</beans>
