<?xml version="1.0" encoding="UTF-8"?>
<spring:beans xmlns="http://www.citrusframework.org/schema/testcase" xmlns:spring="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.citrusframework.org/schema/testcase http://www.citrusframework.org/schema/testcase/citrus-testcase.xsd">
    <testcase name="TransformActionIT">
		<meta-info>
			<author>Philipp Komninos</author>
			<creationdate>2010-08-03</creationdate>
			<status>FINAL</status>
			<last-updated-by>Philipp Komninos</last-updated-by>
			<last-updated-on>2010-08-18T00:00:00</last-updated-on>
		</meta-info>

        <description>
			Test will transform a XML document to a HTML document with XSLT.
		</description>

        <actions>
            <transform variable="result">
            	<xml-data>
            		<![CDATA[
						<TestRequest>
	    					<Message>Hello World!</Message>
						</TestRequest>
            		]]>
            	</xml-data>
            	<xslt-data>
            		<![CDATA[
	            		<xsl:stylesheet version="1.0" xmlns:xsl="http://www.w3.org/1999/XSL/Transform">
						<xsl:template match="/">
						<html>
							<body>
								<h2>Test Request</h2>
								<p>Message: <xsl:value-of select="TestRequest/Message"/></p>
							</body>
						</html>
						</xsl:template>
						</xsl:stylesheet>
            		]]>
            	</xslt-data>
            </transform>
            <echo>
            	<message>${result}</message>
            </echo>
            <transform variable="result">
            	<xml-resource file="classpath:org/citrusframework/citrus/integration/actions/transform-source.xml"/>
            	<xslt-resource file="classpath:org/citrusframework/citrus/integration/actions/transform.xslt"/>
            </transform>
            <echo>
            	<message>${result}</message>
            </echo>
        </actions>
    </testcase>
</spring:beans>
