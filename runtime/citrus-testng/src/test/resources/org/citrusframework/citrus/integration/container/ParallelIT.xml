<?xml version="1.0" encoding="UTF-8"?>
<spring:beans xmlns="http://www.citrusframework.org/schema/testcase" xmlns:spring="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.citrusframework.org/schema/testcase http://www.citrusframework.org/schema/testcase/citrus-testcase.xsd">
  <testcase name="ParallelIT">
    <meta-info>
      <author>Christoph Deppisch</author>
      <creationdate>2008-06-13</creationdate>
      <status>FINAL</status>
      <last-updated-by>Christoph Deppisch</last-updated-by>
      <last-updated-on>2008-06-13T00:00:00</last-updated-on>
    </meta-info>

    <description>Test of action sequence in parallel container</description>

    <actions>
      <parallel>
        <sleep seconds="1.5"/>
        <sequential>
          <sleep milliseconds="1000"/>
          <echo>
            <message>1</message>
          </echo>
        </sequential>
        <echo>
          <message>2</message>
        </echo>
        <echo>
          <message>3</message>
        </echo>
        <iterate condition="i lt= 5" index="i">
          <echo>
            <message>10</message>
          </echo>
        </iterate>
      </parallel>

      <assert exception="org.citrusframework.citrus.exceptions.CitrusRuntimeException">
        <when>
          <parallel>
            <sleep seconds="1.5"/>
            <sequential>
              <sleep milliseconds="1000"/>
              <fail message="This went wrong too"/>
              <echo>
                <message>1</message>
              </echo>
            </sequential>
            <fail message="This went wrong"/>
            <echo>
              <message>2</message>
            </echo>
            <echo>
              <message>3</message>
            </echo>
            <iterate condition="i lt= 5" index="i">
              <echo>
                <message>10</message>
              </echo>
            </iterate>
          </parallel>
        </when>
      </assert>
    </actions>
  </testcase>
</spring:beans>
