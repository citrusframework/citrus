<test name="DoFinallyTest" author="Christoph" status="FINAL" xmlns="http://citrusframework.org/schema/xml/testcase"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://citrusframework.org/schema/xml/testcase http://citrusframework.org/schema/xml/testcase/citrus-testcase.xsd">
  <description>Sample test in XML</description>
  <actions>
    <finally>
      <actions>
        <echo><message>Hello ${user}!</message></echo>
        <echo><message>${user} rocks!</message></echo>
        <create-variables>
          <variable name="finallyRun" value="true"/>
        </create-variables>
      </actions>
    </finally>
    <create-variables>
      <variable name="user" value="Citrus"/>
    </create-variables>
  </actions>
</test>
