<test name="RepeatTest" author="Christoph" status="FINAL" xmlns="http://citrusframework.org/schema/xml/testcase"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://citrusframework.org/schema/xml/testcase http://citrusframework.org/schema/xml/testcase/citrus-testcase.xsd">
  <description>Sample test in XML</description>
  <actions>
    <repeat until="i lt 3">
      <actions>
        <echo><message>Hello Citrus!</message></echo>
      </actions>
    </repeat>

    <repeat until="index lt= 2" index="index">
      <actions>
        <echo><message>Hello Citrus!</message></echo>
      </actions>
    </repeat>

    <repeat until="i lt= 10" index="i">
      <actions>
        <echo><message>Hello Citrus!</message></echo>
        <echo><message>Hello You!</message></echo>
      </actions>
    </repeat>
  </actions>
</test>
