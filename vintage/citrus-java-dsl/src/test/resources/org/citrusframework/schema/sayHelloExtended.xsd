<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
	 xmlns="http://www.consol.de/schemas/samples/sayHelloExtended.xsd"
	 targetNamespace="http://www.consol.de/schemas/samples/sayHelloExtended.xsd"
	 elementFormDefault="qualified"
	 attributeFormDefault="unqualified">
   
	<xs:element name="HelloRequest">
		<xs:complexType>
			<xs:sequence>
				<xs:element name="MessageId" type="xs:string"/>
				<xs:element name="CorrelationId" type="xs:string"/>
				<xs:element name="User" type="xs:string"/>
				<xs:element name="Text" type="xs:string"/>
			</xs:sequence>
		</xs:complexType>
	</xs:element>
  
	<xs:element name="HelloResponse">
		<xs:complexType>
			<xs:sequence>
				<xs:element name="MessageId" type="xs:string"/>
				<xs:element name="CorrelationId" type="xs:string"/>
				<xs:element name="User" type="xs:string"/>
				<xs:element name="Text" type="xs:string"/>
				<xs:element name="Fault" type="FaultType" minOccurs="0"/>
			</xs:sequence>
		</xs:complexType>
	</xs:element>
  
    <xs:element name="FaultDetail">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="MessageId" type="xs:string"/>
                <xs:element name="CorrelationId" type="xs:string"/>
                <xs:element name="ErrorCode" type="xs:string"/>
                <xs:element name="Text" type="xs:string"/>
                <xs:element name="Reason" type="xs:string"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>
  
	<xs:complexType name="FaultType">
		<xs:sequence>
			<xs:element name="Code" type="xs:string"/>
			<xs:element name="Message" type="xs:string"/>
		</xs:sequence>
	</xs:complexType>
</xs:schema>
