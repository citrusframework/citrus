<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:citrus="http://www.citrusframework.org/schema/config"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd
       http://www.citrusframework.org/schema/config http://www.citrusframework.org/schema/config/citrus-config.xsd">

    <!-- Empty test context used in unit tests -->
    <citrus:schema-repository id="customSchemaRepository">
      <citrus:schemas>
             <citrus:reference schema="testSchema"/>
      </citrus:schemas>
    </citrus:schema-repository>

    <bean id="testSchema" class="org.mockito.Mockito" factory-method="mock">
        <constructor-arg><value type="java.lang.Class">org.springframework.xml.xsd.XsdSchema</value></constructor-arg>
        <constructor-arg value="testSchema"/>
    </bean>

    <citrus:schema-repository id="customJsonSchemaRepository" type="json">
        <citrus:schemas>
            <citrus:reference schema="jsonTestSchema"/>
        </citrus:schemas>
    </citrus:schema-repository>

    <bean id="jsonTestSchema" class="org.mockito.Mockito" factory-method="mock">
        <constructor-arg><value type="java.lang.Class">org.citrusframework.json.schema.SimpleJsonSchema</value></constructor-arg>
        <constructor-arg value="jsonTestSchema"/>
    </bean>

    <camelContext id="citrusCamelContext" xmlns="http://camel.apache.org/schema/spring">
      <route id="default_route">
        <from uri="direct:default"/>
        <to uri="log:org.citrusframework.camel?level=INFO"/>
      </route>
    </camelContext>

    <bean id="beforeSuiteDesigner" class="org.citrusframework.dsl.design.BeforeSuiteTestDesigner"/>
    <bean id="afterSuiteDesigner" class="org.citrusframework.dsl.design.AfterSuiteTestDesigner">
      <property name="suiteNames" value="designer-suite"/>
    </bean>

    <bean id="beforeSuiteRunner" class="org.citrusframework.dsl.runner.BeforeSuiteTestRunner"/>
    <bean id="afterSuiteRunner" class="org.citrusframework.dsl.runner.AfterSuiteTestRunner">
      <property name="suiteNames" value="runner-suite"/>
    </bean>

    <bean id="beforeTestDesigner" class="org.citrusframework.dsl.design.BeforeTestDesigner">
      <property name="namePattern" value="BeforeTestDesignerTest"/>
    </bean>
    <bean id="afterTestDesigner" class="org.citrusframework.dsl.design.AfterTestDesigner">
      <property name="namePattern" value="AfterTestDesignerTest"/>
    </bean>

    <bean id="beforeTestRunner" class="org.citrusframework.dsl.runner.BeforeTestRunner">
      <property name="namePattern" value="BeforeTestRunnerTest"/>
    </bean>
    <bean id="afterTestRunner" class="org.citrusframework.dsl.runner.AfterTestRunner">
      <property name="namePattern" value="AfterTestRunnerTest"/>
    </bean>

</beans>
