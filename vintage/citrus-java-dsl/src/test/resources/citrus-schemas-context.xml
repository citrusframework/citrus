<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:citrus="http://www.citrusframework.org/schema/config"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.citrusframework.org/schema/config http://www.citrusframework.org/schema/config/citrus-config.xsd">

  <!-- Common settings -->
  <bean id="schemaRepository" class="org.citrusframework.citrus.xml.XsdSchemaRepository">
    <property name="schemas">
      <list>
        <bean id="sayHelloSchema" class="org.springframework.xml.xsd.SimpleXsdSchema">
          <property name="xsd" value="classpath:org/citrusframework/citrus/demo/sayHello.xsd"/>
        </bean>
      </list>
    </property>
  </bean>

  <citrus:schema id="helloSchema" location="classpath:org/citrusframework/citrus/demo/sayHello.xsd" />
  <citrus:schema id="helloSchemaExtended" location="classpath:org/citrusframework/citrus/demo/sayHelloExtended.xsd" />

  <citrus:schema-repository id="helloSchemaRepository">
    <citrus:schemas>
      <citrus:reference schema="helloSchema" />
      <citrus:reference schema="helloSchemaExtended" />
    </citrus:schemas>
  </citrus:schema-repository>

</beans>
