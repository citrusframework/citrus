<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:citrus="http://www.citrusframework.org/schema/config"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
           http://www.citrusframework.org/schema/config http://www.citrusframework.org/schema/config/citrus-config.xsd">

    <citrus:direct-endpoint id="helloEndpoint"
                            queue="helloQueue"/>

    <citrus:queue id="helloQueue"/>

    <!-- Text equals message validator -->
    <bean id="textEqualsMessageValidator" class="org.citrusframework.citrus.integration.TextEqualsMessageValidator"/>

</beans>
