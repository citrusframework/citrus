<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
    version="1.0">
    
    <persistence-unit name="flightbooking-persistence" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        <class>com.consol.citrus.samples.flightbooking.model.Customer</class>
        <class>com.consol.citrus.samples.flightbooking.model.Flight</class>
        <properties>
            <property name="hibernate.dialect" value="oorg.hibernate.dialect.HSQLDialect"/>
        </properties>
    </persistence-unit>
    
</persistence>