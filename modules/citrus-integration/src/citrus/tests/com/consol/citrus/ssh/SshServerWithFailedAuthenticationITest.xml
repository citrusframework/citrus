<?xml version="1.0" encoding="UTF-8"?>
<spring:beans xmlns="http://www.citrusframework.org/schema/testcase"
              xmlns:spring="http://www.springframework.org/schema/beans"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.citrusframework.org/schema/testcase http://www.citrusframework.org/schema/testcase/citrus-testcase.xsd">
  <testcase name="SshServerWithFailedAuthenticationITest">
    <meta-info>
      <author>Roland</author>
      <creationdate>2012-09-13</creationdate>
      <status>DISABLED</status>
      <last-updated-by>roland</last-updated-by>
      <last-updated-on>2012-09-13T00:00:00</last-updated-on>
    </meta-info>

    <description>
      SSH test with a wrong private key
    </description>

    <actions>
      <echo>
        <message>Contact the SSH server with a wrong private key</message>
      </echo>

      <parallel>
        <send with="sshClientWithWrongPrivateKey">
          <message>
            <data>
              <![CDATA[
                  <ssh-request>
                    <command>shutdown</command>
                    <stdin>input</stdin>
                  </ssh-request>
              ]]>
            </data>
          </message>
        </send>

        <sequential>
          <receive with="sshRequestReceiver">
            <message>
              <data>
                <![CDATA[
                    <ssh-request>
                       <command>shutdown</command>
                       <stdin>input</stdin>
                    </ssh-request>
                 ]]>
              </data>
            </message>
            <extract>
              <header name="jms_messageId" variable="correlation_id"/>
            </extract>
          </receive>

          <send with="sshResponseSender">
            <message>
              <data>
                <![CDATA[
                    <ssh-response>
                        <stdout>Hello Citrus</stdout>
                        <exit>0</exit>
                    </ssh-response>
                   ]]>
              </data>
            </message>
            <header>
              <element name="jms_correlationId" value="${correlation_id}"/>
            </header>
          </send>
        </sequential>
      </parallel>

      <receive with="sshClient">
        <message>
          <data>
            <![CDATA[
                <ssh-response>
                    <stdout>Hello Citrus</stdout>
                    <stderr/>
                    <exit>0</exit>
                </ssh-response>
            ]]>
          </data>
        </message>
      </receive>
    </actions>
  </testcase>
</spring:beans>