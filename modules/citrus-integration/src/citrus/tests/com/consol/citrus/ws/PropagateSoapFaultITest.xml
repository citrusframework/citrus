<?xml version="1.0" encoding="UTF-8"?>
<spring:beans xmlns="http://www.citrusframework.org/schema/testcase" 
              xmlns:spring="http://www.springframework.org/schema/beans" 
              xmlns:ws="http://www.citrusframework.org/schema/ws/testcase"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
              xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd 
                                  http://www.citrusframework.org/schema/ws/testcase http://www.citrusframework.org/schema/ws/testcase/citrus-ws-testcase.xsd
                                  http://www.citrusframework.org/schema/testcase http://www.citrusframework.org/schema/testcase/citrus-testcase.xsd">
    <testcase name="PropagateSoapFaultITest">
		<meta-info>
			<author>Christoph Deppisch</author>
			<creationdate>2011-07-26</creationdate>
			<status>FINAL</status>
			<last-updated-by>Christoph Deppisch</last-updated-by>
			<last-updated-on>2011-07-26T00:00:00</last-updated-on>
		</meta-info>
		
		<variables>
            <variable name="soapFaultCode" value="TEC-1001"/>
            <variable name="soapFaultString" value="Invalid request"/>
        </variables>
		
        <actions>
            <send endpoint="webServiceFaultClient">
                <message>
                    <data>
                        <![CDATA[
                            <ns0:SoapFaultForcingRequest xmlns:ns0="http://www.consol.de/schemas/samples/sayHello.xsd">
                                <ns0:Message>This is invalid</ns0:Message>
                            </ns0:SoapFaultForcingRequest>
                        ]]>
                    </data>
                </message>
            </send>
            
            <receive endpoint="webServiceFaultClient" timeout="5000">
                <message schema-validation="false">
                    <data>
                        <![CDATA[
                            <SOAP-ENV:Fault xmlns:SOAP-ENV="http://schemas.xmlsoap.org/soap/envelope/">
                                <faultcode xmlns:CITRUS="http://www.citrusframework.org/faults">CITRUS:${soapFaultCode}</faultcode>
                                <faultstring xml:lang="en">${soapFaultString}</faultstring>
                            </SOAP-ENV:Fault>
                        ]]>
                    </data>
                </message>
            </receive>
    	</actions>
    </testcase>
</spring:beans>