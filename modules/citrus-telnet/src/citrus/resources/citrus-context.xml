<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:citrus="http://www.citrusframework.org/schema/config"
       xmlns:citrus-telnet="nufenen.uptime.local/schema/telnet/config"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd
       http://www.citrusframework.org/schema/config http://www.citrusframework.org/schema/config/citrus-config.xsd
       http://nufenen.uptime.local/schema/telnet/config http://nufenen.uptime.local/schema/telnet/config/citrus-telnet-config.xsd">

  <context:property-placeholder location="classpath:citrus.properties"
                                ignore-unresolvable="true"/>

  <citrus:global-variables>
    <citrus:variable name="project.name" value="Citrus Telnet Integration Testing"/>
  </citrus:global-variables>

  <!-- Telnet setting -->
  <citrus-telnet:server id="telnetServer"
                     auto-start="true"
                     user="roland"
                     port="10022"/>

  <citrus-telnet:client id="telnetClient"
                     host="localhost"
                     port="10022"
                     user="roland"
                     password="system"
                     connection-timeout="2000"
                     command-timeout="5000"/>


  <citrus-telnet:client id="telnetClientWithWrongUser"
                     host="localhost"
                     port="10022"
                     user="blubber"
                     password="system"
                     connection-timeout="2000"
                     command-timeout="5000"/>

</beans>
