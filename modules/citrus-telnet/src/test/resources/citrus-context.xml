<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:citrus="http://www.citrusframework.org/schema/config"
       xmlns:citrus-telnet="http://nufenen.uptime.local/schema/telnet/config"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd
       http://www.citrusframework.org/schema/config http://www.citrusframework.org/schema/config/citrus-config.xsd
       http://nufenen.uptime.local/schema/telnet/config http://nufenen.uptime.local/schema/telnet/config/citrus-telnet-config.xsd">

  <context:property-placeholder location="classpath:citrus.properties"
                                ignore-unresolvable="true"/>

  <citrus:global-variables>
    <citrus:variable name="project.name" value="Citrus Telnet Integration Testing"/>
  </citrus:global-variables>

  <!-- Listeners -->
  <bean class="com.consol.citrus.report.MessageTracingTestListener"/>

  <!-- Telnet setting -->

  <citrus-telnet:client id="telnetClient1"
                     host="localhost"
                     port="4011"
                     user="username"
                     password="password"
                     command-timeout="100"
                     connection-timeout="50"/>

</beans>
