<?xml version="1.0" encoding="UTF-8"?>
<spring:beans xmlns="http://www.citrusframework.org/schema/testcase"
              xmlns:spring="http://www.springframework.org/schema/beans"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://www.springframework.org/schema/beans
                                  http://www.springframework.org/schema/beans/spring-beans.xsd
                                  http://www.citrusframework.org/schema/testcase
                                  http://www.citrusframework.org/schema/testcase/citrus-testcase.xsd">

  <testcase name="JmsTopicIT">
    <meta-info>
      <author>Christoph Deppisch</author>
      <creationdate>2009-11-02</creationdate>
      <status>FINAL</status>
      <last-updated-by>Christoph Deppisch</last-updated-by>
      <last-updated-on>2009-11-02T00:00:00</last-updated-on>
    </meta-info>

    <variables>
      <variable name="correlationId" value="citrus:randomNumber(10)"/>
      <variable name="messageId" value="citrus:randomNumber(10)"/>
      <variable name="user" value="Christoph"/>
    </variables>

    <actions>
      <parallel>
        <receive endpoint="helloServiceJmsTopicEndpoint" timeout="5000">
          <description>
            Receive asynchronous hello response: HelloService -> TestFramework
          </description>
          <message>
            <data>
              <![CDATA[
                <HelloRequest>
                   <MessageId>${messageId}</MessageId>
                   <CorrelationId>${correlationId}</CorrelationId>
                   <User>${user}</User>
                   <Text>Hello TestFramework</Text>
                </HelloRequest>
              ]]>
            </data>
          </message>
          <header>
            <element name="Operation" value="sayHello"/>
            <element name="CorrelationId" value="${correlationId}"/>
          </header>
        </receive>

        <receive endpoint="helloServiceJmsTopicEndpoint" timeout="5000">
          <description>
            Receive asynchronous hello response: HelloService -> TestFramework
          </description>
          <message>
            <data>
              <![CDATA[
                <HelloRequest>
                   <MessageId>${messageId}</MessageId>
                   <CorrelationId>${correlationId}</CorrelationId>
                   <User>${user}</User>
                   <Text>Hello TestFramework</Text>
                </HelloRequest>
              ]]>
            </data>
          </message>
          <header>
            <element name="Operation" value="sayHello"/>
            <element name="CorrelationId" value="${correlationId}"/>
          </header>
        </receive>

        <sequential>
          <sleep milliseconds="1000"/>

          <send endpoint="helloServiceJmsTopicEndpoint">
            <description>
              Send asynchronous hello request: TestFramework -> HelloService
            </description>
            <message>
              <data>
                <![CDATA[
                   <HelloRequest>
                       <MessageId>${messageId}</MessageId>
                       <CorrelationId>${correlationId}</CorrelationId>
                       <User>${user}</User>
                       <Text>Hello TestFramework</Text>
                   </HelloRequest>
                ]]>
              </data>
            </message>
            <header>
              <element name="Operation" value="sayHello"/>
              <element name="CorrelationId" value="${correlationId}"/>
            </header>
          </send>
        </sequential>
      </parallel>
    </actions>
  </testcase>
</spring:beans>
