<?xml version="1.0" encoding="UTF-8"?>
<beans  xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:citrus="http://www.citrusframework.org/schema/config"
        xmlns:citrus-vertx="http://www.citrusframework.org/schema/vertx/config"
        xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
                            http://www.citrusframework.org/schema/config http://www.citrusframework.org/schema/config/citrus-config.xsd
                            http://www.citrusframework.org/schema/vertx/config http://www.citrusframework.org/schema/vertx/config/citrus-vertx-config.xsd">

  <citrus-vertx:sync-endpoint id="vertxEndpoint1"
                         address="news-feed1"/>

  <citrus-vertx:sync-endpoint id="vertxEndpoint2"
                         host="127.0.0.1"
                         port="10105"
                         vertx-factory="specialVertxInstanceFactory"
                         message-correlator="replyMessageCorrelator"
                         message-converter="messageConverter"
                         timeout="10000"
                         address="news-feed2"/>

  <citrus-vertx:sync-endpoint id="vertxEndpoint3"
                         pub-sub-domain="true"
                         polling-interval="1000"
                         address="news-feed3"/>

  <citrus-vertx:sync-endpoint id="vertxEndpoint4"
                         address="news-feed4"
                         actor="testActor"/>

  <citrus:actor id="testActor" name="TESTACTOR" disabled="false"/>

  <!-- Vert.x instance factory -->
  <bean id="vertxInstanceFactory" class="org.mockito.Mockito" factory-method="mock">
    <constructor-arg value="com.consol.citrus.vertx.factory.VertxInstanceFactory"/>
    <constructor-arg value="vertxInstanceFactory"/>
  </bean>

  <bean id="specialVertxInstanceFactory" class="org.mockito.Mockito" factory-method="mock">
    <constructor-arg value="com.consol.citrus.vertx.factory.VertxInstanceFactory"/>
    <constructor-arg value="specialVertxInstanceFactory"/>
  </bean>

  <bean id="replyMessageCorrelator" class="org.mockito.Mockito" factory-method="mock">
    <constructor-arg value="com.consol.citrus.message.MessageCorrelator"/>
    <constructor-arg value="replyMessageCorrelator"/>
  </bean>

  <bean id="messageConverter" class="org.mockito.Mockito" factory-method="mock">
    <constructor-arg value="com.consol.citrus.vertx.message.VertxMessageConverter"/>
    <constructor-arg value="messageConverter"/>
  </bean>
</beans>
