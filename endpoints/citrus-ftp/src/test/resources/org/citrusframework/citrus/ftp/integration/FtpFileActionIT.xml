<?xml version="1.0" encoding="UTF-8"?>
<spring:beans xmlns="http://www.citrusframework.org/schema/testcase"
              xmlns:spring="http://www.springframework.org/schema/beans"
              xmlns:ftp="http://www.citrusframework.org/schema/ftp/message"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
                                  http://www.citrusframework.org/schema/ftp/message http://www.citrusframework.org/schema/ftp/citrus-ftp-message.xsd
                                  http://www.citrusframework.org/schema/testcase http://www.citrusframework.org/schema/testcase/citrus-testcase.xsd">

  <testcase name="FtpFileActionIT">
    <meta-info>
      <author>Christoph Deppisch</author>
      <creationdate>2018-03-21</creationdate>
      <status>FINAL</status>
      <last-updated-by>Christoph Deppisch</last-updated-by>
      <last-updated-on>2018-03-21T00:00:00</last-updated-on>
    </meta-info>

    <description>Test stores, retrieves and deletes files as Ftp client and server.</description>

    <actions>
      <echo>
        <message>Test: Receive Ftp request via server instance and send back response.</message>
      </echo>

      <echo>
        <message>Sending MKD command to FTP server</message>
      </echo>

      <send endpoint="ftpClient" fork="true">
        <message>
          <payload>
            <ftp:command>
              <ftp:signal>MKD</ftp:signal>
              <ftp:arguments>test</ftp:arguments>
            </ftp:command>
          </payload>
        </message>
      </send>

      <receive endpoint="ftpServer">
        <message>
          <payload>
            <ftp:command>
              <ftp:signal>MKD</ftp:signal>
              <ftp:arguments>test</ftp:arguments>
            </ftp:command>
          </payload>
        </message>
      </receive>

      <send endpoint="ftpServer">
        <message>
          <payload>
            <ftp:command-result>
              <ftp:success>true</ftp:success>
            </ftp:command-result>
          </payload>
        </message>
      </send>

      <receive endpoint="ftpClient">
        <message>
          <payload>
            <ftp:command-result>
              <ftp:success>true</ftp:success>
              <ftp:reply-code>257</ftp:reply-code>
              <ftp:reply-string>257 "/test" created.</ftp:reply-string>
            </ftp:command-result>
          </payload>
        </message>
      </receive>

      <echo>
        <message>Directory 'test' created on FTP server</message>
      </echo>

      <echo>
        <message>Sending store file command to FTP server</message>
      </echo>

      <send endpoint="ftpClient" fork="true">
        <message>
          <payload>
            <ftp:put-command>
              <ftp:file path="ftp/hello.txt" type="ASCII"/>
              <ftp:target path="/test/hello.txt"/>
            </ftp:put-command>
          </payload>
        </message>
      </send>

      <receive endpoint="ftpServer">
        <message>
          <payload>
            <ftp:command>
              <ftp:signal>PASV</ftp:signal>
            </ftp:command>
          </payload>
        </message>
      </receive>

      <send endpoint="ftpServer">
        <message>
          <payload>
            <ftp:command-result>
              <ftp:success>true</ftp:success>
            </ftp:command-result>
          </payload>
        </message>
      </send>

      <receive endpoint="ftpServer">
        <message>
          <payload>
            <ftp:command>
              <ftp:signal>STOR</ftp:signal>
              <ftp:arguments>/test/hello.txt</ftp:arguments>
            </ftp:command>
          </payload>
        </message>
      </receive>

      <send endpoint="ftpServer">
        <message>
          <payload>
            <ftp:command-result>
              <ftp:success>true</ftp:success>
            </ftp:command-result>
          </payload>
        </message>
      </send>

      <receive endpoint="ftpClient">
        <message>
          <payload>
            <ftp:put-command-result>
              <ftp:success>true</ftp:success>
              <ftp:reply-code>226</ftp:reply-code>
              <ftp:reply-string>@contains('Transfer complete')@</ftp:reply-string>
            </ftp:put-command-result>
          </payload>
        </message>
      </receive>

      <echo>
        <message>Testing of store file command finished successfully</message>
      </echo>

      <echo>
        <message>Sending LIST command to FTP server</message>
      </echo>

      <send endpoint="ftpClient" fork="true">
        <message>
          <payload>
            <ftp:list-command>
              <ftp:target path="/test" />
            </ftp:list-command>
          </payload>
        </message>
      </send>

      <receive endpoint="ftpServer">
        <message>
          <payload>
            <ftp:command>
              <ftp:signal>PASV</ftp:signal>
            </ftp:command>
          </payload>
        </message>
      </receive>

      <send endpoint="ftpServer">
        <message>
          <payload>
            <ftp:command-result>
              <ftp:success>true</ftp:success>
            </ftp:command-result>
          </payload>
        </message>
      </send>

      <receive endpoint="ftpServer">
        <message>
          <payload>
            <ftp:command>
              <ftp:signal>LIST</ftp:signal>
              <ftp:arguments>/test</ftp:arguments>
            </ftp:command>
          </payload>
        </message>
      </receive>

      <send endpoint="ftpServer">
        <message>
          <payload>
            <ftp:command-result>
              <ftp:success>true</ftp:success>
            </ftp:command-result>
          </payload>
        </message>
      </send>

      <receive endpoint="ftpClient">
        <message>
          <payload>
            <ftp:list-command-result>
              <ftp:success>true</ftp:success>
              <ftp:reply-code>226</ftp:reply-code>
              <ftp:reply-string>@contains('Closing data connection')@</ftp:reply-string>
              <ftp:files>
                <ftp:file path="hello.txt"/>
              </ftp:files>
            </ftp:list-command-result>
          </payload>
        </message>
      </receive>

      <echo>
        <message>Testing of LIST command finished successfully</message>
      </echo>

      <echo>
        <message>Sending retrieve file command to FTP server</message>
      </echo>

      <send endpoint="ftpClient" fork="true">
        <message>
          <payload>
            <ftp:get-command>
              <ftp:file path="/test/hello.txt" type="ASCII"/>
              <ftp:target path="target/ftp/hello.txt"/>
            </ftp:get-command>
          </payload>
        </message>
      </send>

      <receive endpoint="ftpServer">
        <message>
          <payload>
            <ftp:command>
              <ftp:signal>PASV</ftp:signal>
            </ftp:command>
          </payload>
        </message>
      </receive>

      <send endpoint="ftpServer">
        <message>
          <payload>
            <ftp:command-result>
              <ftp:success>true</ftp:success>
            </ftp:command-result>
          </payload>
        </message>
      </send>

      <receive endpoint="ftpServer">
        <message>
          <payload>
            <ftp:command>
              <ftp:signal>RETR</ftp:signal>
              <ftp:arguments>/test/hello.txt</ftp:arguments>
            </ftp:command>
          </payload>
        </message>
      </receive>

      <send endpoint="ftpServer">
        <message>
          <payload>
            <ftp:command-result>
              <ftp:success>true</ftp:success>
            </ftp:command-result>
          </payload>
        </message>
      </send>

      <receive endpoint="ftpClient">
        <message>
          <payload>
            <ftp:get-command-result>
              <ftp:success>true</ftp:success>
              <ftp:reply-code>226</ftp:reply-code>
              <ftp:reply-string>@contains('Transfer complete')@</ftp:reply-string>
              <ftp:file path="target/ftp/hello.txt">
                <ftp:data>Hello FTP server!</ftp:data>
              </ftp:file>
            </ftp:get-command-result>
          </payload>
        </message>
      </receive>

      <echo>
        <message>Testing of retrieve file command finished successfully</message>
      </echo>

      <echo>
        <message>Sending delete command to FTP server</message>
      </echo>

      <send endpoint="ftpClient" fork="true">
        <message>
          <payload>
            <ftp:delete-command>
              <ftp:target path="/test"/>
            </ftp:delete-command>
          </payload>
        </message>
      </send>

      <receive endpoint="ftpServer">
        <message>
          <payload>
            <ftp:command>
              <ftp:signal>CWD</ftp:signal>
              <ftp:arguments>/test</ftp:arguments>
            </ftp:command>
          </payload>
        </message>
      </receive>

      <send endpoint="ftpServer">
        <message>
          <payload>
            <ftp:command-result>
              <ftp:success>true</ftp:success>
            </ftp:command-result>
          </payload>
        </message>
      </send>

      <receive endpoint="ftpServer">
        <message>
          <payload>
            <ftp:command>
              <ftp:signal>CWD</ftp:signal>
              <ftp:arguments>/test</ftp:arguments>
            </ftp:command>
          </payload>
        </message>
      </receive>

      <send endpoint="ftpServer">
        <message>
          <payload>
            <ftp:command-result>
              <ftp:success>true</ftp:success>
            </ftp:command-result>
          </payload>
        </message>
      </send>

      <receive endpoint="ftpServer">
        <message>
          <payload>
            <ftp:command>
              <ftp:signal>PASV</ftp:signal>
            </ftp:command>
          </payload>
        </message>
      </receive>

      <send endpoint="ftpServer">
        <message>
          <payload>
            <ftp:command-result>
              <ftp:success>true</ftp:success>
            </ftp:command-result>
          </payload>
        </message>
      </send>

      <receive endpoint="ftpServer">
        <message>
          <payload>
            <ftp:command>
              <ftp:signal>LIST</ftp:signal>
            </ftp:command>
          </payload>
        </message>
      </receive>

      <send endpoint="ftpServer">
        <message>
          <payload>
            <ftp:command-result>
              <ftp:success>true</ftp:success>
            </ftp:command-result>
          </payload>
        </message>
      </send>

      <receive endpoint="ftpServer">
        <message>
          <payload>
            <ftp:command>
              <ftp:signal>CWD</ftp:signal>
              <ftp:arguments>/test/hello.txt</ftp:arguments>
            </ftp:command>
          </payload>
        </message>
      </receive>

      <send endpoint="ftpServer">
        <message>
          <payload>
            <ftp:command-result>
              <ftp:success>true</ftp:success>
            </ftp:command-result>
          </payload>
        </message>
      </send>

      <receive endpoint="ftpServer">
        <message>
          <payload>
            <ftp:command>
              <ftp:signal>PASV</ftp:signal>
            </ftp:command>
          </payload>
        </message>
      </receive>

      <send endpoint="ftpServer">
        <message>
          <payload>
            <ftp:command-result>
              <ftp:success>true</ftp:success>
            </ftp:command-result>
          </payload>
        </message>
      </send>

      <receive endpoint="ftpServer">
        <message>
          <payload>
            <ftp:command>
              <ftp:signal>LIST</ftp:signal>
              <ftp:arguments>/test/hello.txt</ftp:arguments>
            </ftp:command>
          </payload>
        </message>
      </receive>

      <send endpoint="ftpServer">
        <message>
          <payload>
            <ftp:command-result>
              <ftp:success>true</ftp:success>
            </ftp:command-result>
          </payload>
        </message>
      </send>

      <receive endpoint="ftpServer">
        <message>
          <payload>
            <ftp:command>
              <ftp:signal>DELE</ftp:signal>
              <ftp:arguments>/test/hello.txt</ftp:arguments>
            </ftp:command>
          </payload>
        </message>
      </receive>

      <send endpoint="ftpServer">
        <message>
          <payload>
            <ftp:command-result>
              <ftp:success>true</ftp:success>
            </ftp:command-result>
          </payload>
        </message>
      </send>

      <receive endpoint="ftpClient">
        <message>
          <payload>
            <ftp:delete-command-result>
              <ftp:success>true</ftp:success>
              <ftp:reply-code>250</ftp:reply-code>
              <ftp:reply-string>@contains('250 Requested file action okay, deleted /test/hello.txt.')@</ftp:reply-string>
            </ftp:delete-command-result>
          </payload>
        </message>
      </receive>

      <echo>
        <message>Testing of delete file command finished successfully</message>
      </echo>

    </actions>
  </testcase>
</spring:beans>
