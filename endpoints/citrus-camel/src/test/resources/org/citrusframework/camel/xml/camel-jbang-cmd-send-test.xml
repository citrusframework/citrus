<test name="CamelJBangCmdSendTest" author="Christoph" status="FINAL" xmlns="http://citrusframework.org/schema/xml/testcase"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://citrusframework.org/schema/xml/testcase http://citrusframework.org/schema/xml/testcase/citrus-testcase.xsd
                          http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">
  <description>Sample test in XML</description>
  <actions>
    <camel>
      <jbang>
        <run>
          <integration name="echo-xml"
                       file="classpath:org/citrusframework/camel/integration/echo.yaml">
          </integration>
        </run>
      </jbang>
    </camel>

    <camel>
      <jbang>
        <cmd>
          <send integration="echo-xml">
            <body>
              <data>Hello Camel</data>
            </body>
          </send>
        </cmd>
      </jbang>
    </camel>

    <camel>
      <jbang>
        <verify integration="echo-xml" log-message="HELLO CAMEL"/>
      </jbang>
    </camel>

    <camel>
      <jbang>
        <cmd>
          <send integration="echo-xml" endpoint="direct:echo">
            <body>
              <data>Camel rocks!</data>
            </body>
          </send>
        </cmd>
      </jbang>
    </camel>

    <camel>
      <jbang>
        <verify integration="echo-xml" log-message="CAMEL ROCKS!"/>
      </jbang>
    </camel>

    <camel>
      <jbang>
        <cmd>
          <send integration="echo-xml" uri="direct:echo" timeout="5000" reply="true" args="--show-headers">
            <headers>
              <header name="foo" value="bar"/>
            </headers>
            <body>
              <data>Good Bye Camel!</data>
            </body>
          </send>
        </cmd>
      </jbang>
    </camel>

    <camel>
      <jbang>
        <verify integration="echo-xml" log-message="GOOD BYE CAMEL!"/>
      </jbang>
    </camel>
  </actions>
  <finally>
    <camel>
      <jbang>
        <stop integration="echo-xml"/>
      </jbang>
    </camel>
  </finally>
</test>
