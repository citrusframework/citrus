<?xml version="1.0" encoding="UTF-8"?>
<spring:beans xmlns="http://www.citrusframework.org/schema/testcase"
              xmlns:spring="http://www.springframework.org/schema/beans"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
                                  http://www.citrusframework.org/schema/testcase http://www.citrusframework.org/schema/testcase/citrus-testcase.xsd">

  <testcase name="SoapSchemaValidationIT">
    <meta-info>
      <author>Christoph Deppisch</author>
      <creationdate>2015-10-27</creationdate>
      <status>FINAL</status>
    </meta-info>

    <description>Validating SOAP message with special WSDL using imports</description>

    <actions>

      <echo>
        <message>Test: Sending valid SOAP message</message>
      </echo>

      <parallel>
        <send endpoint="echoSoapClient">
          <message>
            <data>
              <![CDATA[
                <sample:sampleMessage xmlns:sample="http://www.citrusframework.org/SampleService/">
                  <command>hello</command>
                  <message>FOO</message>
                </sample:sampleMessage>
              ]]>
            </data>
          </message>
        </send>

        <sequential>
          <receive endpoint="echoSoapServer">
            <message schema-repository="sampleServiceSchemaRepository">
              <data>
                <![CDATA[
                  <sample:sampleMessage xmlns:sample="http://www.citrusframework.org/SampleService/">
                    <command>hello</command>
                    <message>FOO</message>
                  </sample:sampleMessage>
                ]]>
              </data>
            </message>
          </receive>

          <send endpoint="echoSoapServer">
            <message>
              <data>
                <![CDATA[
                  <sample:sampleMessageResponse xmlns:sample="http://www.citrusframework.org/SampleService/">
                    <response>success</response>
                    <message>BAR</message>
                  </sample:sampleMessageResponse>
                ]]>
              </data>
            </message>
          </send>
        </sequential>
      </parallel>

      <receive endpoint="echoSoapClient">
        <message schema-repository="sampleServiceSchemaRepository">
          <data>
            <![CDATA[
              <sample:sampleMessageResponse xmlns:sample="http://www.citrusframework.org/SampleService/">
                <response>success</response>
                <message>BAR</message>
              </sample:sampleMessageResponse>
            ]]>
          </data>
        </message>
      </receive>

      <echo>
        <message>Test: Sending invalid SOAP message</message>
      </echo>

      <parallel>
        <send endpoint="echoSoapClient">
          <message>
            <data>
              <![CDATA[
                <sample:sampleMessage xmlns:sample="http://www.citrusframework.org/SampleService/">
                  <command>hello</command>
                  <message>FOO-wrong</message>
                </sample:sampleMessage>
              ]]>
            </data>
          </message>
        </send>

        <sequential>
          <assert exception="org.citrusframework.citrus.exceptions.ValidationException">
            <when>
              <receive endpoint="echoSoapServer">
                <message schema-repository="sampleServiceSchemaRepository">
                  <data>
                    <![CDATA[
                      <sample:sampleMessage xmlns:sample="http://www.citrusframework.org/SampleService/">
                        <command>hello</command>
                        <message>FOO-wrong</message>
                      </sample:sampleMessage>
                    ]]>
                  </data>
                </message>
              </receive>
            </when>
          </assert>

          <send endpoint="echoSoapServer">
            <message>
              <data>
                <![CDATA[
                  <sample:sampleMessageResponse xmlns:sample="http://www.citrusframework.org/SampleService/">
                    <response>success</response>
                    <message>BAR-wrong</message>
                  </sample:sampleMessageResponse>
                ]]>
              </data>
            </message>
          </send>
        </sequential>
      </parallel>

      <assert exception="org.citrusframework.citrus.exceptions.ValidationException">
        <when>
          <receive endpoint="echoSoapClient">
            <message schema-repository="sampleServiceSchemaRepository">
              <data>
                <![CDATA[
                  <sample:sampleMessageResponse xmlns:sample="http://www.citrusframework.org/SampleService/">
                    <response>success</response>
                    <message>BAR-wrong</message>
                  </sample:sampleMessageResponse>
                ]]>
              </data>
            </message>
          </receive>
        </when>
      </assert>

    </actions>
  </testcase>
</spring:beans>
