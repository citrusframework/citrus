<?xml version="1.0" encoding="UTF-8"?>
<spring:beans xmlns="http://www.citrusframework.org/schema/testcase"
              xmlns:spring="http://www.springframework.org/schema/beans"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
                                  http://www.citrusframework.org/schema/testcase http://www.citrusframework.org/schema/testcase/citrus-testcase.xsd">

  <testcase name="WebServiceServer_1_IT">
    <meta-info>
      <author>Christoph Deppisch</author>
      <creationdate>2008-04-25</creationdate>
      <status>FINAL</status>
      <last-updated-by>Christoph Deppisch</last-updated-by>
      <last-updated-on>2008-04-25T00:00:00</last-updated-on>
    </meta-info>

    <variables>
      <variable name="correlationId" value="citrus:randomNumber(10)"></variable>
      <variable name="messageId" value="citrus:randomNumber(10)"></variable>
      <variable name="user" value="Christoph"></variable>
    </variables>

    <actions>
      <parallel>
        <send endpoint="helloSoapClient">
          <message>
            <data>
              <![CDATA[
                <ns0:HelloRequest xmlns:ns0="http://citrusframework.org/schemas/samples/HelloService.xsd">
                  <ns0:MessageId>${messageId}</ns0:MessageId>
                  <ns0:CorrelationId>${correlationId}</ns0:CorrelationId>
                  <ns0:User>${user}</ns0:User>
                  <ns0:Text>Hello WebServer</ns0:Text>
                </ns0:HelloRequest>
              ]]>
            </data>
          </message>
          <header>
            <element name="{http://citrusframework.org/test}Operation" value="sayHello"/>
          </header>
        </send>

        <sequential>
          <receive endpoint="soapRequestEndpoint">
            <message schema-validation="false">
              <data>
                <![CDATA[
                  <ns0:HelloRequest xmlns:ns0="http://citrusframework.org/schemas/samples/HelloService.xsd">
                    <ns0:MessageId>${messageId}</ns0:MessageId>
                    <ns0:CorrelationId>${correlationId}</ns0:CorrelationId>
                    <ns0:User>${user}</ns0:User>
                    <ns0:Text>Hello WebServer</ns0:Text>
                  </ns0:HelloRequest>
                ]]>
              </data>
            </message>
            <header>
              <element name="Operation" value="sayHello"/>
            </header>
            <extract>
              <header name="citrus_jms_messageId" variable="internal_correlation_id"/>
            </extract>
          </receive>

          <send endpoint="soapResponseEndpoint">
            <message>
              <data>
                <![CDATA[
                  <ns0:HelloResponse xmlns:ns0="http://citrusframework.org/schemas/samples/HelloService.xsd">
                    <ns0:MessageId>${messageId}</ns0:MessageId>
                    <ns0:CorrelationId>${correlationId}</ns0:CorrelationId>
                    <ns0:User>WebServer</ns0:User>
                    <ns0:Text>Hello ${user}</ns0:Text>
                  </ns0:HelloResponse>
                ]]>
              </data>
            </message>
            <header>
              <element name="citrus_jms_correlationId" value="${internal_correlation_id}"/>
            </header>
          </send>
        </sequential>
      </parallel>

      <receive endpoint="helloSoapClient">
        <message schema-validation="false">
          <data>
            <![CDATA[
              <ns0:HelloResponse xmlns:ns0="http://citrusframework.org/schemas/samples/HelloService.xsd">
                <ns0:MessageId>${messageId}</ns0:MessageId>
                <ns0:CorrelationId>${correlationId}</ns0:CorrelationId>
                <ns0:User>WebServer</ns0:User>
                <ns0:Text>Hello ${user}</ns0:Text>
              </ns0:HelloResponse>
            ]]>
          </data>
        </message>
      </receive>

    </actions>
  </testcase>
</spring:beans>
