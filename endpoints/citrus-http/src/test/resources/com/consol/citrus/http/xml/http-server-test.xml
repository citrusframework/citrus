<test name="HttpServerTest" author="Christoph" status="FINAL">
  <variables>
    <variable name="id" value="12345"/>
  </variables>
  <actions>
    <http server="httpServer">
      <receive-request>
        <GET/>
      </receive-request>
    </http>

    <http server="httpServer">
      <send-response/>
    </http>

    <http server="httpServer">
      <receive-request timeout="2000">
        <GET path="/test/order/${id}" content-type="application/xml" accept="application/xml" version="HTTP/1.1">
          <param name="id" value="${id}"/>
          <param name="type" value="gold"/>
        </GET>
      </receive-request>
    </http>

    <http server="httpServer">
      <send-response>
        <response status="200" reason-phrase="OK" version="HTTP/1.1" content-type="application/xml">
         <body>
           <data>
             <![CDATA[
                <order><id>${id}</id><item>foo</item></order>
              ]]>
           </data>
         </body>
        </response>
      </send-response>
    </http>

    <http server="httpServer">
      <receive-request>
        <POST path="/user">
          <headers>
            <header name="userId" value="1001"/>
          </headers>
          <body>
            <data>
              <![CDATA[
                <user><id>1001</id><name>new_user</name></user>
              ]]>
            </data>
          </body>
        </POST>
        <extract>
          <body variable="userId" path="/user/id"/>
        </extract>
      </receive-request>
    </http>

    <http server="httpServer">
      <send-response>
        <response status="404" reason-phrase="NOT_FOUND">
          <headers>
            <header name="userId" value="1001"/>
          </headers>
        </response>
      </send-response>
    </http>

    <http server="httpServer">
      <receive-request>
        <DELETE path="/user/${id}"/>
      </receive-request>
    </http>

    <http server="httpServer">
      <receive-request path="/test">
        <HEAD/>
      </receive-request>
    </http>

    <http server="httpServer" actor="testActor">
      <receive-request>
        <OPTIONS/>
      </receive-request>
    </http>
  </actions>
</test>
