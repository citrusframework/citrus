<?xml version="1.0" encoding="UTF-8"?>
<spring:beans xmlns="http://www.citrusframework.org/schema/testcase"
              xmlns:spring="http://www.springframework.org/schema/beans"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://www.springframework.org/schema/beans
                                  http://www.springframework.org/schema/beans/spring-beans.xsd
                                  http://www.citrusframework.org/schema/testcase
                                  http://www.citrusframework.org/schema/testcase/citrus-testcase.xsd">

  <testcase name="MailServerErrorIT">
    <meta-info>
      <author>Christoph Deppisch</author>
      <creationdate>2013-12-10</creationdate>
      <status>FINAL</status>
      <last-updated-by>Christoph Deppisch</last-updated-by>
      <last-updated-on>2013-12-10T00:00:00</last-updated-on>
    </meta-info>

    <description>Test mail SMTP communication with error simulated on smtp server.</description>

    <variables>
      <variable name="from" value="christoph@citrusframework.com"></variable>
      <variable name="to" value="citrus@citrusframework.com"></variable>
      <variable name="subject" value="This is a test mail message"></variable>
    </variables>

    <actions>
      <echo>
        <message>Test 1: Simulate error on smtp server</message>
      </echo>

      <parallel>
        <assert exception="org.springframework.mail.MailSendException">
          <when>
            <send endpoint="advancedMailClient">
              <description>
                Send mail: Citrus -> Citrus SMTP server
              </description>
              <message>
                <data>
                  <![CDATA[
                    <mail-message xmlns="http://www.citrusframework.org/schema/mail/message">
                      <from>${from}</from>
                      <to>${to}</to>
                      <cc></cc>
                      <bcc></bcc>
                      <subject>${subject}</subject>
                      <body>
                        <contentType>text/plain; charset=utf-8</contentType>
                        <content>Hello Citrus mail server!</content>
                      </body>
                    </mail-message>
                  ]]>
                </data>
              </message>
              <header>
                <element name="citrus_mail_content_type" value="text/plain"/>
              </header>
            </send>
          </when>
        </assert>

        <sequential>
          <receive endpoint="advancedMailServer">
            <description>
              Receive accept request for incoming mail
            </description>
            <message>
              <data>
                <![CDATA[
                  <accept-request xmlns="http://www.citrusframework.org/schema/mail/message">
                    <from>${from}</from>
                    <to>${to}</to>
                  </accept-request>
                ]]>
              </data>
            </message>
          </receive>

          <send endpoint="advancedMailServer">
            <description>
              Send accept response and accept incoming mail.
            </description>
            <message>
              <data>
                <![CDATA[
                  <accept-response xmlns="http://www.citrusframework.org/schema/mail/message">
                    <accept>true</accept>
                  </accept-response>
                ]]>
              </data>
            </message>
          </send>

          <receive endpoint="advancedMailServer">
            <description>
              Receive mail message: Citrus SMTP server channel -> Citrus
            </description>
            <message>
              <data>
                <![CDATA[
                  <mail-message xmlns="http://www.citrusframework.org/schema/mail/message">
                    <from>${from}</from>
                    <to>${to}</to>
                    <cc></cc>
                    <bcc></bcc>
                    <subject>${subject}</subject>
                    <body>
                      <contentType>text/plain; charset=utf-8</contentType>
                      <content>Hello Citrus mail server!</content>
                    </body>
                  </mail-message>
                ]]>
              </data>
            </message>
            <header>
              <element name="citrus_mail_from" value="${from}"/>
              <element name="citrus_mail_to" value="${to}"/>
              <element name="citrus_mail_subject" value="${subject}"/>
              <element name="citrus_mail_content_type" value="text/plain; charset=utf-8"/>
            </header>
          </receive>

          <send endpoint="advancedMailServer">
            <description>
              Send mail response OK
            </description>
            <message>
              <data>
                <![CDATA[
                  <mail-response xmlns="http://www.citrusframework.org/schema/mail/message">
                    <code>443</code>
                    <message>Failed!</message>
                  </mail-response>
                ]]>
              </data>
            </message>
          </send>
        </sequential>
      </parallel>

    </actions>
  </testcase>
</spring:beans>
