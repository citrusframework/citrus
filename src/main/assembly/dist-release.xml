<assembly>
  <id>release</id>
  <formats>
    <format>tar.gz</format>
    <format>zip</format>
    <format>dir</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <includeSiteDirectory>false</includeSiteDirectory>
  <moduleSets>
    <moduleSet>
      <includes>
        <include>com.consol.citrus:citrus-core</include>
        <include>com.consol.citrus:citrus-ws</include>
        <include>com.consol.citrus:citrus-http</include>
        <include>com.consol.citrus:citrus-ssh</include>
        <include>com.consol.citrus:citrus-mail</include>
        <include>com.consol.citrus:citrus-camel</include>
        <include>com.consol.citrus:citrus-vertx</include>
        <include>com.consol.citrus:citrus-java-dsl</include>
        <include>com.consol.citrus:citrus-adapter</include>
        <include>com.consol.citrus.model:citrus-model-core</include>
        <include>com.consol.citrus.model:citrus-model-http</include>
        <include>com.consol.citrus.model:citrus-model-ws</include>
        <include>com.consol.citrus.model:citrus-model-ssh</include>
        <include>com.consol.citrus.model:citrus-model-mail</include>
        <include>com.consol.citrus.model:citrus-model-camel</include>
        <include>com.consol.citrus.model:citrus-model-vertx</include>
        <include>com.consol.citrus.ant:citrus-ant-tasks</include>
        <include>com.consol.citrus.mvn:citrus-maven-plugin</include>
      </includes>
      <binaries>
        <outputDirectory>dist</outputDirectory>
        <unpack>false</unpack>
        <includeDependencies>false</includeDependencies>
      </binaries>
    </moduleSet>
  </moduleSets>
    
  <fileSets>
    <!-- Citrus Samples -->
    <fileSet>
      <directory>modules/citrus-samples</directory>
      <outputDirectory>samples</outputDirectory>
      <useDefaultExcludes>true</useDefaultExcludes>
      <excludes>
        <exclude>**/target/**</exclude>
        <exclude>**/test-output/**</exclude>
        <exclude>**/logs/**</exclude>
        <exclude>**/src/pom.xml</exclude>
        <exclude>**/citrus-test/pom.xml</exclude>
        <exclude>src/main/script</exclude>
        <exclude>**/*.iml</exclude>
        <exclude>.project</exclude>
        <exclude>.classpath</exclude>
        <exclude>.settings</exclude>
      </excludes>
      <lineEnding>unix</lineEnding>
    </fileSet>
    
    <fileSet>
      <directory>modules/citrus-samples/src/main/script/lib</directory>
      <outputDirectory>samples/lib</outputDirectory>
    </fileSet>
    
    <fileSet>
      <directory>modules/citrus-samples/src/main/script</directory>
      <outputDirectory>samples/flightbooking/citrus-test</outputDirectory>
      <includes>
        <include>build.xml</include>
      </includes>
    </fileSet>
    
    <fileSet>
      <directory>modules/citrus-samples/src/main/script</directory>
      <outputDirectory>samples/greeting/citrus-test</outputDirectory>
      <includes>
        <include>build.xml</include>
      </includes>
    </fileSet>
    
    <fileSet>
      <directory>modules/citrus-samples/src/main/script</directory>
      <outputDirectory>samples/bookstore/citrus-test</outputDirectory>
      <includes>
        <include>build.xml</include>
      </includes>
    </fileSet>
    
    <!-- Reference documentation -->
    <fileSet>
      <directory>target/doc/html</directory>
      <outputDirectory>docs/reference/html</outputDirectory>
    </fileSet>
    
    <!-- Citrus Sources -->
    <fileSet>
      <directory>modules/citrus-model/model-core/target</directory>
      <outputDirectory>src</outputDirectory>
      <includes>
        <include>*sources.jar</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>modules/citrus-model/model-http/target</directory>
      <outputDirectory>src</outputDirectory>
      <includes>
        <include>*sources.jar</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>modules/citrus-model/model-ws/target</directory>
      <outputDirectory>src</outputDirectory>
      <includes>
        <include>*sources.jar</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>modules/citrus-model/model-ssh/target</directory>
      <outputDirectory>src</outputDirectory>
      <includes>
        <include>*sources.jar</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>modules/citrus-model/model-mail/target</directory>
      <outputDirectory>src</outputDirectory>
      <includes>
        <include>*sources.jar</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>modules/citrus-model/model-camel/target</directory>
      <outputDirectory>src</outputDirectory>
      <includes>
        <include>*sources.jar</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>modules/citrus-model/model-vertx/target</directory>
      <outputDirectory>src</outputDirectory>
      <includes>
        <include>*sources.jar</include>
      </includes>
    </fileSet>
    <fileSet>
        <directory>modules/citrus-core/target</directory>
        <outputDirectory>src</outputDirectory>
        <includes>
            <include>*sources.jar</include>
        </includes>
    </fileSet>
    <fileSet>
        <directory>modules/citrus-adapter/target</directory>
        <outputDirectory>src</outputDirectory>
        <includes>
            <include>*sources.jar</include>
        </includes>
    </fileSet>
    <fileSet>
        <directory>modules/citrus-http/target</directory>
        <outputDirectory>src</outputDirectory>
        <includes>
            <include>*sources.jar</include>
        </includes>
    </fileSet>
    <fileSet>
        <directory>modules/citrus-ws/target</directory>
        <outputDirectory>src</outputDirectory>
        <includes>
            <include>*sources.jar</include>
        </includes>
    </fileSet>
    <fileSet>
        <directory>modules/citrus-ssh/target</directory>
        <outputDirectory>src</outputDirectory>
        <includes>
            <include>*sources.jar</include>
        </includes>
    </fileSet>
    <fileSet>
      <directory>modules/citrus-mail/target</directory>
      <outputDirectory>src</outputDirectory>
      <includes>
        <include>*sources.jar</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>modules/citrus-camel/target</directory>
      <outputDirectory>src</outputDirectory>
      <includes>
        <include>*sources.jar</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>modules/citrus-vertx/target</directory>
      <outputDirectory>src</outputDirectory>
      <includes>
        <include>*sources.jar</include>
      </includes>
    </fileSet>
    <fileSet>
        <directory>modules/citrus-java-dsl/target</directory>
        <outputDirectory>src</outputDirectory>
        <includes>
            <include>*sources.jar</include>
        </includes>
    </fileSet>
    
    <!-- License, readme, notice -->
    <fileSet>
        <directory>${project.basedir}</directory>
        <outputDirectory></outputDirectory>
        <includes>
          <include>README.txt</include>
          <include>LICENSE.txt</include>
          <include>NOTICE.txt</include>
        </includes>
    </fileSet>
  </fileSets>
  
  <files>
    <file>
      <source>modules/citrus-samples/bookstore/citrus-test/src/pom.xml</source>
      <outputDirectory>samples/bookstore/citrus-test</outputDirectory>
    </file>
    
    <file>
      <source>modules/citrus-samples/flightbooking/citrus-test/src/pom.xml</source>
      <outputDirectory>samples/flightbooking/citrus-test</outputDirectory>
    </file>
    
    <file>
      <source>modules/citrus-samples/greeting/citrus-test/src/pom.xml</source>
      <outputDirectory>samples/greeting/citrus-test</outputDirectory>
    </file>
    <!-- PDF reference documentation -->
    <file>
      <source>target/doc/pdf/citrus-reference-1.4.1.pdf</source>
      <outputDirectory>docs/reference/pdf</outputDirectory>
    </file>
  </files>
</assembly>