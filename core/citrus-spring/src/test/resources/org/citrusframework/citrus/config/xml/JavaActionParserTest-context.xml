<?xml version="1.0" encoding="UTF-8"?>
<spring:beans xmlns="http://www.citrusframework.org/schema/testcase" 
              xmlns:spring="http://www.springframework.org/schema/beans" 
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
              xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd 
                                  http://www.citrusframework.org/schema/testcase http://www.citrusframework.org/schema/testcase/citrus-testcase.xsd">
    <testcase name="JavaActionParserTest">
        <actions>
            <java class="org.citrusframework.citrus.util.InvocationDummy">
                <constructor>
                    <argument type="">Test Invocation</argument>
                </constructor>
                <method name="invoke">
                    <argument type="String[]">1,2</argument>
                </method>
            </java>
      
            <java class="org.citrusframework.citrus.util.InvocationDummy">
                <method name="invoke">
                    <argument type="int">4</argument>
                    <argument>Test</argument>
                    <argument type="boolean">true</argument>
                </method>
            </java>
            
            <java ref="invocationDummy">
                <method name="invoke">
                    <argument type="int">0</argument>
                    <argument type="String">Test invocation</argument>
                    <argument type="boolean">false</argument>
                </method>
            </java>
        </actions>
    </testcase>
    
    <spring:bean id="invocationDummy" class="org.citrusframework.citrus.util.InvocationDummy"/>
    
</spring:beans>
