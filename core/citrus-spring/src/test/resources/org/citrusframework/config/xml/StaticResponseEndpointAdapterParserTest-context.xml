<?xml version="1.0" encoding="UTF-8"?>
<beans  xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:citrus="http://www.citrusframework.org/schema/config"
        xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
                            http://www.citrusframework.org/schema/config http://www.citrusframework.org/schema/config/citrus-config.xsd">

    <citrus:static-response-adapter id="endpointAdapter1">
      <citrus:payload>
        <![CDATA[
          <TestMessage>
            <Text>Hello!</Text>
          </TestMessage>
        ]]>
      </citrus:payload>
      <citrus:header>
        <citrus:element name="Operation" value="sayHello"/>
      </citrus:header>
    </citrus:static-response-adapter>

    <citrus:static-response-adapter id="endpointAdapter2">
      <citrus:resource file="classpath:coms/consol/citrus/response-data.xml" />
      <citrus:header>
        <citrus:element name="Operation" value="sayHello"/>
      </citrus:header>
    </citrus:static-response-adapter>

</beans>
